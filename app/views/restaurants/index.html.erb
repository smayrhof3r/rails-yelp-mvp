<h1 class = "text-center">Restaurants</h1>
<% @restaurants.each do |restaurant| %>
  <div class="card mb-3 shadow border-dark">
    <div class="card-body m-0">
      <div class="row">
        <div class="col">
          <div class="card-title">
            <h4 class = "mb-0"><%= restaurant.name %></h4>
          </div>
          <div class="card-sub-title text-muted">
            <h6><%= '⭐'*(restaurant.reviews.sum(:rating) / restaurant.reviews.count) if restaurant.reviews.count > 0 %><%= restaurant.category %></h6>
          </div>
          <div class="card-text">
            <%= restaurant.address %>
          </div>
        </div>
        <div class="col-3">
          <div class="card-link text-end">
            <%= link_to "more info >>", restaurant_path(restaurant), class: "text-muted text-decoration-none" %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
